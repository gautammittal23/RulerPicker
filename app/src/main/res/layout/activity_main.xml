<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtviewcurrentvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ruler_picker"
        android:hint="15"
        android:visibility="invisible"/>


    <com.a.ruler.RulerValuePicker
        android:id="@+id/ruler_picker"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:ruler_text_color="@color/colorAccent"
        android:background="@android:color/white"
        app:indicator_color="@android:color/darker_gray"
        app:indicator_interval="14dp"
        app:indicator_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:max_value="100"
        app:label="Gautam"
        app:min_value="15"
        app:notch_color="@android:color/black"
        app:ruler_text_size="6sp">



    </com.a.ruler.RulerValuePicker>


</androidx.constraintlayout.widget.ConstraintLayout>